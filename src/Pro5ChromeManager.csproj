<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>Pro5ChromeManager</RootNamespace>
    <AssemblyName>Pro5ChromeManager</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings> <!-- Recommended for modern .NET projects -->
  </PropertyGroup>

  <ItemGroup>
    <!-- This is the only external package needed for browser automation -->
    <PackageReference Include="Selenium.WebDriver" Version="4.21.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Compile>
  </ItemGroup>

</Project>
